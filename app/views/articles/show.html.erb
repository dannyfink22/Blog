<div>
	<h1><%= @article.title %></h1>

	</p>
	<p><% if @article.image_url %>
			<%= image_tag @article.image_url %><br />
		<% end %>
	</p>	

	<p><%= @article.body.html_safe %></p>

	<% if logged_in? %>
		<p><%= link_to "delete", article_path(@article), method: :delete, data: { confirm: "Do you really want to delete this article?"} %> 
		or <%= link_to "edit", edit_article_path(@article) %></p>
	<% end %>

	<%= render partial: 'comments/form' %>

	<h3>Comments (<%= @article.comments.size %>)</h3>
	<%= render partial: 'articles/comment', collection: @article.comments %>
</div>


	